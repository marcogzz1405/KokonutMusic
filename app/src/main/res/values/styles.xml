<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme use to load black color at splash-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TitleWhite" parent="Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Medium15">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Light12">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Body">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="FieldsTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorError">@color/errorTextColor</item>
        <item name="hintTextAppearance">@style/HintFields</item>
        <item name="errorTextAppearance">@style/ErrorFields</item>
    </style>

    <style name="HintFields">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ErrorFields">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/errorTextColor</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/btn_accent_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_background_accent</item>
    </style>

    <style name="LoaderDialog" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/rippleColor</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CancelButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="FlatPrimaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background_primary</item>
    </style>

    <style name="MenuText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:background">@drawable/button_background_primary</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MenuTextSmall">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/button_background_primary</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
